function zeroFill (i) {
     return (i < 10 ? '0' : '') + i
   }

function now () {
  var d = new Date()
  return d.getFullYear() + '-' +
    zeroFill(d.getMonth()) + '-' +
    zeroFill(d.getDate()) + ' ' +
    zeroFill(d.getHours()) + ':' +
    zeroFill(d.getMinutes())
}

console.log(now());
